#!/bin/bash

THIS_SCRIPT_DIRECTORY="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_SCRIPT_DIRECTORY="${THIS_SCRIPT_DIRECTORY}/../../../.."

source "${ROOT_SCRIPT_DIRECTORY}/shared"

function Process {
    ProcessCommonArguments $@
    ProcessCommonPre

    ProcessGitRepositories \
        --remote-base-path "https://github.com/RedPandaProjects" \
        --local-base-path "${SERVER_PC_DEVELOPMENT_PATH}/github.com/RedPandaProjects" \
        --repository "XRayEngine" --branch "master" \
        --repository "RedSource" --branch "master" \
        --repository "CSEngine" --branch "master" \
        --repository "UnrealEngine" --branch "master"

    ProcessCommonPost
}

Process $@
