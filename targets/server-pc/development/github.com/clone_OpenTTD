#!/bin/bash

set -e

THIS_SCRIPT_DIRECTORY="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_SCRIPT_DIRECTORY="${THIS_SCRIPT_DIRECTORY}/../../../.."

source "${ROOT_SCRIPT_DIRECTORY}/shared"

function Process {
    ProcessPre $@

    CloneGitRepositories                                                        \
        --remote_base_path "https://github.com/OpenTTD"                         \
        --local_base_path "${SERVER_PC_DEVELOPMENT_PATH}/github.com/OpenTTD"    \
        --repository "OpenTTD" --branch "master"                                \
        --repository "wiki-data" --branch "main"                                \
        --repository "BaNaNaS" --branch "main"                                  \
        --repository "website" --branch "main"                                  \
        --repository "master-server-web" --branch "main"                        \
        --repository "master-server" --branch "main"                            \
        --repository "game-coordinator" --branch "main"                         \
        --repository "eints" --branch "main"                                    \
        --repository "bananas-server" --branch "main"                           \
        --repository "bananas-frontend-web" --branch "main"                     \
        --repository "bananas-frontend-cli" --branch "main"                     \
        --repository "bananas-api" --branch "main"                              \
        --repository "appstore-data" --branch "master"                          \
        --repository "nml" --branch "master"                                    \
        --repository "OpenMSX" --branch "master"                                \
        --repository "OpenSFX" --branch "master"                                \
        --repository "OpenGFX" --branch "master"                                \
        --repository "actions" --branch "main"                                  \
        --repository "py-protocol" --branch "main"                              \
        --repository "workflows" --branch "main"                                \
        --repository "aws-infra" --branch "main"                                \
        --repository "py-helpers" --branch "main"                               \
        --repository "team" --branch "main"                                     \
        --repository "OpenTTD-git-hooks" --branch "main"                        \
        --repository "catcodec" --branch "master"                               \
        --repository "eints-sandbox" --branch "master"                          \
        --repository "osie" --branch "master"                                   \
        --repository "grfcodec" --branch "master"                               \
        --repository "CompileFarm" --branch "master"                            \
        --repository "binaries-redirect" --branch "master"                      \
        --repository "binaries-proxy" --branch "master"                         \
        --repository "infrastructure" --branch "master"                         \
        --repository "musa" --branch "master"                                   \
        --repository "MasterServer" --branch "master"

    ProcessPost
}

Process $@
