#!/bin/bash

THIS_SCRIPT_DIRECTORY="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_SCRIPT_DIRECTORY="${THIS_SCRIPT_DIRECTORY}/../../../.."

source "${ROOT_SCRIPT_DIRECTORY}/shared"

function Process {
    ProcessCommonArguments $@
    ProcessCommonPre

    ProcessGitRepositories \
        --remote-base-path "https://github.com/FrictionalGames" \
        --local-base-path "${SERVER_PC_DEVELOPMENT_PATH}/github.com/FrictionalGames" \
        --repository "AmnesiaAMachineForPigs" --branch "master" \
        --repository "AmnesiaTheDarkDescent" --branch "master" \
        --repository "HPL1Engine" --branch "master" \
        --repository "PenumbraOverture" --branch "master"

    ProcessCommonPost
}

Process $@
