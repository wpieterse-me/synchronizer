#!/bin/bash

THIS_SCRIPT_DIRECTORY="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_SCRIPT_DIRECTORY="${THIS_SCRIPT_DIRECTORY}/../../../.."

source "${ROOT_SCRIPT_DIRECTORY}/shared"

PROCESS_ANDROID_GOOGLESOURCE_COM_SCRIPT="${THIS_SCRIPT_DIRECTORY}/android.googlesource.com/process"
PROCESS_CGIT_FREEBSD_ORG_SCRIPT="${THIS_SCRIPT_DIRECTORY}/cgit.freebsd.org/process"
PROCESS_CHROMIUM_GOOGLESOURCE_COM_SCRIPT="${THIS_SCRIPT_DIRECTORY}/chromium.googlesource.com/process"
PROCESS_GIT_KERNEL_ORG_SCRIPT="${THIS_SCRIPT_DIRECTORY}/git.kernel.org/process"
PROCESS_GIT_SAVANNAH_GNU_ORG_SCRIPT="${THIS_SCRIPT_DIRECTORY}/git.savannah.gnu.org/process"
PROCESS_GITHUB_COM_SCRIPT="${THIS_SCRIPT_DIRECTORY}/github.com/process"
PROCESS_GITLAB_COM_SCRIPT="${THIS_SCRIPT_DIRECTORY}/gitlab.com/process"

function Process {
    ProcessCommonArguments $@
    ProcessCommonPre

    if [[ ${PARAMETER_DISABLE_REPOSITORIES} -eq 0 ]];
    then
        ProcessCallSubScripts \
            "${PROCESS_CGIT_FREEBSD_ORG_SCRIPT}" \
            "${PROCESS_GIT_KERNEL_ORG_SCRIPT}" \
            "${PROCESS_GIT_SAVANNAH_GNU_ORG_SCRIPT}" \
            "${PROCESS_GITHUB_COM_SCRIPT}" \
            "${PROCESS_GITLAB_COM_SCRIPT}"
    fi

    ProcessCommonPost
}

Process $@
