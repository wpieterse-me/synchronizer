#!/bin/bash

THIS_SCRIPT_DIRECTORY="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
ROOT_SCRIPT_DIRECTORY="${THIS_SCRIPT_DIRECTORY}/../../../../.."

source "${ROOT_SCRIPT_DIRECTORY}/shared"

PROCESS_ANDIKLEEN_SCRIPT="${THIS_SCRIPT_DIRECTORY}/andikleen/process"
PROCESS_AXBOE_SCRIPT="${THIS_SCRIPT_DIRECTORY}/axboe/process"
PROCESS_BAZELBUILD_SCRIPT="${THIS_SCRIPT_DIRECTORY}/bazelbuild/process"
PROCESS_GOOGLE_SCRIPT="${THIS_SCRIPT_DIRECTORY}/google/process"
PROCESS_GOOGLEAPIS_SCRIPT="${THIS_SCRIPT_DIRECTORY}/googleapis/process"
PROCESS_GOOGLECLOUDPLATFORM_SCRIPT="${THIS_SCRIPT_DIRECTORY}/GoogleCloudPlatform/process"
PROCESS_ID_SOFTWARE_SCRIPT="${THIS_SCRIPT_DIRECTORY}/id-Software/process"
PROCESS_LEANDROMOREIRA_SCRIPT="${THIS_SCRIPT_DIRECTORY}/leandromoreira/process"
PROCESS_LLVM_SCRIPT="${THIS_SCRIPT_DIRECTORY}/llvm/process"
PROCESS_POCL_SCRIPT="${THIS_SCRIPT_DIRECTORY}/pocl/process"
PROCESS_REDPROJECTS_SCRIPT="${THIS_SCRIPT_DIRECTORY}/RedProjects/process"
PROCESS_WPIETERSE2825_SCRIPT="${THIS_SCRIPT_DIRECTORY}/wpieterse2825/process"

function Process {
    ProcessCommonArguments $@
    ProcessCommonPre

    if [[ ${PARAMETER_DISABLE_REPOSITORIES} -eq 0 ]];
    then
        ProcessCallSubScripts \
            ${PROCESS_ANDIKLEEN_SCRIPT} \
            ${PROCESS_AXBOE_SCRIPT} \
            ${PROCESS_BAZELBUILD_SCRIPT} \
            ${PROCESS_GOOGLE_SCRIPT} \
            ${PROCESS_GOOGLEAPIS_SCRIPT} \
            ${PROCESS_GOOGLECLOUDPLATFORM_SCRIPT} \
            ${PROCESS_ID_SOFTWARE_SCRIPT} \
            ${PROCESS_LEANDROMOREIRA_SCRIPT} \
            ${PROCESS_LLVM_SCRIPT} \
            ${PROCESS_POCL_SCRIPT} \
            ${PROCESS_REDPROJECTS_SCRIPT} \
            ${PROCESS_WPIETERSE2825_SCRIPT}
    fi

    ProcessCommonPost
}

Process $@
