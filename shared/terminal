function IsStandardErrorATerminal {
  [[ -t 2 ]]
}

function LogInformation {
  if IsStandardErrorATerminal;
  then
    echo -e >&2 "\033[1;34mINFO:\033[0m $*"
  else
    echo -e >&2 "INFO: $*"
  fi
}

function LogWarning {
  if IsStandardErrorATerminal;
  then
    echo -e >&2 "\033[1;33mWARNING:\033[0m $*"
  else
    echo -e >&2 "WARNING: $*"
  fi
}

function LogError {
  if IsStandardErrorATerminal;
  then
    echo -e >&2 "\033[1;31mERROR:\033[0m $*"
  else
    echo -e >&2 "ERROR: $*"
  fi
}
