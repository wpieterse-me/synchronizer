            echo "*** TEST - AMD - DEBUG *************************************************************************************************"
        elif [ "${BUILD_TYPE}" = "fastbuild" ];
        then
            echo "*** TEST - AMD - FAST BUILD ********************************************************************************************"
        elif [ "${BUILD_TYPE}" = "opt" ];
        then
            echo "*** TEST - AMD - OPTIMIZED *********************************************************************************************"
        else
            echo "*** TEST - AMD - UNKNOWN ***********************************************************************************************"
        fi
    elif [ "${COMPILER}" = "intel" ];
