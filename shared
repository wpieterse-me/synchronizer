function ProcessGitRepository {
    local REPOSITORY_REMOTE_BASE_PATH=""
    local REPOSITORY_LOCAL_BASE_PATH=""
    local REPOSITORY_NAME=""
    local REPOSITORY_BRANCH=""

    if [[ ${PARAMETER_DISABLE_CLONE} -eq 0 ]];
    then
        while [[ $# -ne 0 ]];
        do
            case $1 in
                --remote-base-path=*|--local-base-path=*|--name=*|--branch=*)
                    arg="$1"
                    shift
                    set -- "${arg%%=*}" "${arg#*=}" "$@"
                    continue
                    ;;
                --remote-base-path)
                    if [[ $# -lt 2 ]];
                    then
                        echo "ProcessGitRepository: No argument after --remote-base-path"
                        exit 1
                    fi

                    shift
                    REPOSITORY_REMOTE_BASE_PATH="$1"
                    ;;
                --local-base-path)
                    if [[ $# -lt 2 ]];
                    then
                        echo "ProcessGitRepository: No argument after --local-base-path"
                        exit 1
                    fi

                    shift
                    REPOSITORY_LOCAL_BASE_PATH="$1"
                    ;;
                --name)
                    if [[ $# -lt 2 ]];
                    then
                        echo "ProcessGitRepository: No argument after --name"
                        exit 1
                    fi

                    shift
                    REPOSITORY_NAME="$1"
                    ;;
                --branch)
                    if [[ $# -lt 2 ]];
                    then
                        echo "ProcessGitRepository: No argument after --branch"
                        exit 1
                    fi

                    shift
                    REPOSITORY_BRANCH="$1"
                    ;;
                *)
                    echo "ProcessGitRepository: Unknown argument $1."
                    exit 1
                    ;;
            esac

            shift
        done

        mkdir -p ${REPOSITORY_LOCAL_BASE_PATH}

        pushd ${REPOSITORY_LOCAL_BASE_PATH} > /dev/null

        if [ ! -d "${REPOSITORY_NAME}" ];
        then
            echo "*** INITIAL CLONE ******************************************************************************************************"
            echo ""

            git                                                         \
                clone                                                   \
                "${REPOSITORY_REMOTE_BASE_PATH}/${REPOSITORY_NAME}.git" \
                --recurse-submodules

            echo ""
        fi

        pushd "${REPOSITORY_LOCAL_BASE_PATH}/${REPOSITORY_NAME}"  > /dev/null

        git                 \
            config          \
            pager.log false

        echo "*** CLEAN **************************************************************************************************************"
        echo ""
        echo "Cleaning"

        git         \
            clean   \
            -dxf

        echo ""
        echo "*** RESET **************************************************************************************************************"
        echo ""

        git                             \
            reset                       \
            --hard ${REPOSITORY_BRANCH}

        echo ""
        echo "*** CHECKOUT ***********************************************************************************************************"
        echo ""

        git                         \
            checkout                \
            ${REPOSITORY_BRANCH}

        echo ""
        echo "*** PULL ***************************************************************************************************************"
        echo ""

        git                         \
            pull                    \
            --recurse-submodules    \
            --all

        echo ""
        echo "*** LOG ****************************************************************************************************************"
        echo ""

        git     \
            log \
            -n1

        echo ""

        popd > /dev/null

        popd > /dev/null
    fi
}

function ProcessMakeBuild {
    local SOURCE_PATH=""
    local BUILD_PATH=""
    local COMPILER=""
    local BUILD_TYPE=""

    while [[ $# -ne 0 ]];
    do
        case $1 in
            --source-path=*|--build-path=*|--compiler=*|--build-type=*)
                arg="$1"
                shift
                set -- "${arg%%=*}" "${arg#*=}" "$@"
                continue
                ;;
            --source-path)
                if [[ $# -lt 2 ]];
                then
                    echo "ProcessMakeBuild: No argument after --source-path"
                    exit 1
                fi

                shift
                SOURCE_PATH="$1"
                ;;
            --build-path)
                if [[ $# -lt 2 ]];
                then
                    echo "ProcessMakeBuild: No argument after --build-path"
                    exit 1
                fi

                shift
                BUILD_PATH="$1"
                ;;
            --compiler)
                if [[ $# -lt 2 ]];
                then
                    echo "ProcessMakeBuild: No argument after --compiler"
                    exit 1
                fi

                shift
                COMPILER="$1"
                ;;
            --build-type)
                if [[ $# -lt 2 ]];
                then
                    echo "ProcessMakeBuild: No argument after --build-type"
                    exit 1
                fi

                shift
                BUILD_TYPE="$1"
                ;;
            *)
                echo "ProcessMakeBuild: Unknown argument $1."
                exit 1
                ;;
        esac

        shift
    done

    if [ "${COMPILER}" = "gnu" ];
    then
        _CONTAINER_C_COMPILER=${TOOL_GNU_C_COMPILER}
        _CONTAINER_CPP_COMPILER=${TOOL_GNU_CPP_COMPILER}
        _CONTAINER_LINKER=${TOOL_GNU_LINKER}

        if [ "${BUILD_TYPE}" = "debug" ];
        then
            echo "*** MAKE - GNU - DEBUG *************************************************************************************************"
        elif [ "${BUILD_TYPE}" = "release" ];
        then
            echo "*** MAKE - GNU - RELEASE ***********************************************************************************************"
        else
            echo "*** MAKE - GNU - UNKNOWN ***********************************************************************************************"
        fi
    elif [ "${COMPILER}" = "llvm" ];
    then
        _CONTAINER_C_COMPILER=${TOOL_LLVM_C_COMPILER}
        _CONTAINER_CPP_COMPILER=${TOOL_LLVM_CPP_COMPILER}
        _CONTAINER_LINKER=${TOOL_LLVM_LINKER}

        if [ "${BUILD_TYPE}" = "debug" ];
        then
            echo "*** MAKE - LLVM - DEBUG ************************************************************************************************"
        elif [ "${BUILD_TYPE}" = "release" ];
        then
            echo "*** MAKE - LLVM - RELEASE **********************************************************************************************"
        else
            echo "*** MAKE - LLVM - UNKNOWN **********************************************************************************************"
        fi
    elif [ "${COMPILER}" = "amd" ];
    then
        _CONTAINER_C_COMPILER=${TOOL_AMD_C_COMPILER}
        _CONTAINER_CPP_COMPILER=${TOOL_AMD_CPP_COMPILER}
        _CONTAINER_LINKER=${TOOL_AMD_LINKER}

        if [ "${BUILD_TYPE}" = "debug" ];
        then
            echo "*** MAKE - AMD - DEBUG *************************************************************************************************"
        elif [ "${BUILD_TYPE}" = "release" ];
        then
            echo "*** MAKE - AMD - RELEASE ***********************************************************************************************"
        else
            echo "*** MAKE - AMD - UNKNOWN ***********************************************************************************************"
        fi
    elif [ "${COMPILER}" = "intel" ];
    then
        _CONTAINER_C_COMPILER=${TOOL_INTEL_C_COMPILER}
        _CONTAINER_CPP_COMPILER=${TOOL_INTEL_CPP_COMPILER}
        _CONTAINER_LINKER=${TOOL_INTEL_LINKER}

        if [ "${BUILD_TYPE}" = "debug" ];
        then
            echo "*** MAKE - INTEL - DEBUG ***********************************************************************************************"
        elif [ "${BUILD_TYPE}" = "release" ];
        then
            echo "*** MAKE - INTEL - RELEASE *********************************************************************************************"
        else
            echo "*** MAKE - INTEL - UNKNOWN *********************************************************************************************"
        fi
    else
        _CONTAINER_C_COMPILER=${TOOL_NONE_C_COMPILER}
        _CONTAINER_CPP_COMPILER=${TOOL_NONE_CPP_COMPILER}
        _CONTAINER_LINKER=${TOOL_NONE_LINKER}

        if [ "${BUILD_TYPE}" = "debug" ];
        then
            echo "*** MAKE - UNKNOWN - DEBUG *********************************************************************************************"
        elif [ "${BUILD_TYPE}" = "release" ];
        then
            echo "*** MAKE - UNKNOWN - RELEASE *******************************************************************************************"
        else
            echo "*** MAKE - UNKNOWN - UNKNOWN *******************************************************************************************"
        fi
    fi

    echo ""

    local _BUILD_PATH_FINAL="${BUILD_PATH}/${COMPILER}/${BUILD_TYPE}"

    mkdir -p ${_BUILD_PATH_FINAL}

    pushd ${_BUILD_PATH_FINAL} > /dev/null

    source /opt/AMD/aocc-compiler-3.1.0/setenv_AOCC.sh > /dev/null
    source /opt/intel/oneapi/setvars.sh > /dev/null

    CC=${_CONTAINER_C_COMPILER} \
    CXX=${_CONTAINER_CPP_COMPILER} \
    LD=${_CONTAINER_LINKER} \
        make \
            --always-make \
            --directory=${SOURCE_PATH} \
            --jobs=6

    popd > /dev/null

    echo ""
}

function ProcessMake {
    local SOURCE_PATH=$3
    local BUILD_PATH=$4

    if [[ ${PARAMETER_DISABLE_BUILD} -eq 0 ]];
    then
        while [[ $# -ne 0 ]];
        do
            case $1 in
                --source-path=*|--build-path=*|--compiler=*|--build-type=*)
                    arg="$1"
                    shift
                    set -- "${arg%%=*}" "${arg#*=}" "$@"
                    continue
                    ;;
                --source-path)
                    if [[ $# -lt 2 ]];
                    then
                        echo "ProcessMake: No argument after --source-path"
                        exit 1
                    fi

                    shift
                    SOURCE_PATH="$1"
                    ;;
                --build-path)
                    if [[ $# -lt 2 ]];
                    then
                        echo "ProcessMake: No argument after --build-path"
                        exit 1
                    fi

                    shift
                    BUILD_PATH="$1"
                    ;;
                *)
                    echo "ProcessMake: Unknown argument $1."
                    exit 1
                    ;;
            esac

            shift
        done

        for CURRENT_COMPILER in "${DEFAULT_SUPPORTED_COMPILERS[@]}"
        do
            for CURRENT_BUILD_TYPE in "${DEFAULT_SUPPORTED_MAKE_BUILD_TYPES[@]}"
            do
                ProcessMakeBuild                        \
                    --source-path ${SOURCE_PATH}        \
                    --build-path ${BUILD_PATH}          \
                    --compiler ${CURRENT_COMPILER}      \
                    --build-type ${CURRENT_BUILD_TYPE}
            done
        done
    fi
}

